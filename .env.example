# Environment Variables Template
# Copy this file to .env and fill in your AWS credentials

# AWS Credentials
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_SESSION_TOKEN=your_session_token_here_if_using_temporary_credentials
AWS_REGION=us-east-1

# DynamoDB Configuration
DYNAMODB_TABLE_NAME=employees
DYNAMODB_ENDPOINT_URL=http://localhost:8000  # For local DynamoDB testing

# S3 Configuration
S3_BUCKET_NAME=employee-directory-files
S3_ENDPOINT_URL=http://localhost:9000  # For local S3 testing (like LocalStack)

# Application Configuration
FLASK_ENV=development
FLASK_SECRET_KEY=your-secret-key-change-this-in-production